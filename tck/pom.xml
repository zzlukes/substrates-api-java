  <dependencies>

    <dependency>
      <groupId>io.humainary.substrates</groupId>
      <artifactId>humainary-substrates-api</artifactId>
      <version>${revision}</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <profiles>
    <profile>
      <id>tck</id>
      <activation>
        <property>
          <name>tck</name>
        </property>
      </activation>
      <properties>
        <maven.test.skip>false</maven.test.skip>
      </properties>
      <dependencies>
        <dependency>
          <groupId>${substrates.spi.groupId}</groupId>
          <artifactId>${substrates.spi.artifactId}</artifactId>
          <version>${substrates.spi.version}</version>
          <scope>test</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

