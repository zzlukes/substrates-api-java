  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.humainary.substrates</groupId>
    <artifactId>humainary-substrates-parent</artifactId>
    <version>${revision}</version>
  </parent>

  <artifactId>humainary-substrates-tck</artifactId>
